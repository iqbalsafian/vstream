extends layout

include _includes/sharedHTMLfunctions

block content
	each location in locations
		.box
			article.media
				.media-content
					.content
						p
							+outputRating(location.rating)
							br
							!='<strong>'
							a(href="/location")= location.name
							!='</strong> <small>@johnsmith</small><br>'
							=location.address
						p
							each facility in location.facilities
								span.tag.is-danger= facility
					nav.level.is-mobile
						.level-left
							a.level-item
								span.icon.is-small
									i.fa.fa-reply
							a.level-item
								span.icon.is-small
									i.fa.fa-retweet
							a.level-item
								span.icon.is-small
									i.fa.fa-heart
